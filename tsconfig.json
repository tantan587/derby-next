{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["dom", "es2017", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    //"noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "jsoutput"
  },
  "include": [
      "./server/**/*.ts",
      "./scripts/**/*.ts"
  ],
  "exclude": [
      "node_modules",
  ]
}
